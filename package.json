{
    "name": "task-management-system",
    "version": "1.0.0",
    "description": "Modern task management system built with microservices architecture",
    "main": "start-services.js",
    "scripts": {
      "start": "node start-services.js",
      "dev": "node start-services.js",
      "install-all": "npm run install:gateway && npm run install:tasks && npm run install:categories && npm run install:statistics",
      "install:gateway": "cd api-gateway && npm install",
      "install:tasks": "cd microservices/tasks && npm install",
      "install:categories": "cd microservices/categories && npm install",
      "install:statistics": "cd microservices/statistics && npm install",
      "start:gateway": "cd api-gateway && npm start",
      "start:tasks": "cd microservices/tasks && npm start",
      "start:categories": "cd microservices/categories && npm start",
      "start:statistics": "cd microservices/statistics && npm start"
    },
    "dependencies": {
      "axios": "^1.6.0"
    },
    "keywords": [
      "task-management",
      "microservices",
      "nodejs",
      "express",
      "api-gateway",
      "sqlite",
      "frontend"
    ],
    "author": "Santiago",
    "license": "MIT",
    "repository": {
      "type": "git",
      "url": "https://github.com/yourusername/task-management-system.git"
    },
    "engines": {
      "node": ">=16.0.0"
    }
  }